@model hellodoc.DAL.ViewModels.PayrateVm

<section class=" d-flex  flex-column row align-items-center m-0 ">
    <div class="d-flex flex-column  my-3 col-lg-8 ">

        <div class="d-flex justify-content-between px-3">
            <div>
                <h3 class="d-none d-lg-block d-md-block">
                    <span>Payrate</span>
                </h3>
            </div>
            <a class="btn btn-outline-info fw-bold h-50 shadow" onclick="GetEditProvider(`@Model.AspId`, 1)">
                <div class="d-flex justify-content-between">
                    <i class="bi bi-caret-left-fill"></i> <span class="d-sm-block d-none">Back</span>
                </div>
            </a>
        </div>

        <div class=" my-4 mx-2  rounded  shadow">
            <table class="table pt-2">
                <thead class="table-active">
                    <tr class="text-center">
                        <th scope="col-4">Category</th>
                        <th scope="col-4">Payrate</th>
                        <th scope="col-4">Action </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var counter = 1;
                    }
                    @foreach (var obj in Model.PayrateForProvider!)
                    {
                        <tr class="text-center">
                            <input value="@obj.Categoryid" id="payratecategory@(counter)" hidden>
                            <input value="@Model.Phyid" id="phyid@(counter)" hidden>
                            <td class="text-center mt-2">
                                <div class="mt-3 d-flex justify-content-center align-items-center fw-semibold">
                                    @obj.Categoryname
                                </div>
                            </td>
                            <td>
                                <div class="text-center d-flex form-floating border-muted rounded border me-2">
                                    <input asp-for="@obj.PayrateValue" id="payRateField@(counter)" type="number" class="Physician form-control border-0 bg-transparent">
                                    <label for="contact">Payrate</label>
                                </div>
                            </td>
                            <td class="text-center mt-2">
                                <div class="mt-2 d-flex justify-content-center align-items-center">
                                    <button type="submit" class="btn btn-info text-light fw-semibold" onclick="PostPayrate(@counter)">Edit</button>
                                </div>
                            </td>
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
