@model hellodoc.DAL.ViewModels.AdminDashboardVm

@functions {
    public string GetTableColorClass(int RequstTypeId)
    {
        switch (RequstTypeId)
        {
            case 1: return "green";
            case 2: return "orange";
            case 3: return "blue";
            case 4: return "pink";
            default: return "green";
        }
    }

    public string GetRequestBy(int RequstTypeId)
    {
        switch (RequstTypeId)
        {
            case 1: return "Patient";
            case 2: return "Family/ Friend";
            case 3: return "Concierge";
            case 4: return "Business Partner";
            default: return "Vip";
        }
    }
}

<input asp-for="@Model.reqTypeId" id="reqTypeValueId" hidden />

@if (Model.RequestListAdminDash.Count > 0)
{
    <div class="table-responsive d-none d-lg-block">
        <table class="table providerTable">
            <thead>
                <tr>
                    <th scope="col" class="text-center">Name</th>
                    <th scope="col" class="text-center">Phone</th>
                    <th scope="col" class="text-center">Address</th>
                    @if (@Model.StatusForName == 4)
                    {
                        <th scope="col" class="text-center">Status</th>
                    }
                    <th scope="col" class="text-center">Chat With</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.RequestListAdminDash)
                {
                    <tr class="align-middle table-@{
                                            @GetTableColorClass(obj.RequestTypeId)
}">
                        <td scope="row" id="@obj.Name">
                            <div class="d-flex justify-content-around">
                                <span>@obj.Name</span>
                                <a href="mailto:@obj.Email">
                                    <button class="btn btn-outline-light w-auto p-1"><i class="fa-solid fa-envelopes-bulk"></i></button>
                                </a>
                            </div>
                        </td>
                        <td class="text-center">
                            @if (obj.Phone != null)
                            {
                                <div class="d-flex justify-content-center">
                                    <a href="tel:@obj.Phone" class="text-decoration-none">
                                        <button class="btn btn-outline-light d-none d-md-block w-auto text-center fw-semibold">
                                            <i class="fa-solid fa-phone me-2"></i>
                                            @obj.Phone
                                        </button>
                                    </a>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <span>( @GetRequestBy(1) )</span>
                                </div>
                            }
                            @if (obj.Mobile != null && obj.RequestTypeId != 1)
                            {
                                <div class="d-flex justify-content-center">
                                    <a href="tel:@obj.Mobile" class="text-decoration-none">
                                        <button class="btn btn-outline-light d-none d-md-block w-auto fw-semibold">
                                            <i class="fa-solid fa-phone me-2"></i>
                                            @obj.Mobile
                                        </button>
                                    </a>
                                </div>
                                <div class="d-flex justify-content-center">
                                    ( @GetRequestBy(obj.RequestTypeId) )
                                </div>
                            }
                        </td>

                        <td class="text-center">
                            @obj.Address
                        </td>

                        @if (Model.StatusForName == 4)
                        {
                            <td class="text-center">
                                @if (obj.callType == 1)
                                {
                                    <button class="btn btn-outline-light fw-semibold" type="button" onclick="HouseCall(@obj.RequestId)"><i class="fa-solid fa-laptop-medical pe-2 fs-6"></i>House Call</button>
                                }
                            </td>
                        }

                        <td class="text-center">
                            <div class="d-flex gap-1">
                                @if (obj.UserId != null)
                                {
                                    <button class="btn btn-outline-light shadow-none d-flex fw-semibold align-items-center gap-2" onclick="CreateConnection(@obj.RequestId,`@obj.PatientAspId`)" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
                                        <i class="fa-solid fa-user fs-6"></i>
                                        <span> Patient</span>
                                    </button>
                                }
                                <button class="btn btn-outline-light shadow-none d-flex fw-semibold align-items-center gap-2" onclick="CreateConnection(@obj.RequestId,`@obj.AdminAspId`)" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
                                    <i class="fa-solid fa-user-doctor fs-6"></i>
                                    <span>Admin</span>
                                </button>
                            </div>
                        </td>

                        <td class="text-center">
                            <div class="dropstart">
                                <button class="btn btn-outline-light fw-bolder pointer" type="button" data-bs-toggle="dropdown" aria-expanded="false">Actions</button>

                                <ul class="dropdown-menu pointer">
                                    @if (@Model.StatusForName == 1)
                                    {
                                        <li><a class="dropdown-item" onclick="AcceptCaseModal(@obj.RequestId)"><i class="fa-solid fa-clipboard-check pe-2 fs-6"></i>Accept</a></li>
                                    }

                                    <li><a class="dropdown-item" onclick="ViewCaseRecords(@Model.StatusForName, @obj.RequestId, 3)"><i class="bi bi-journal-bookmark-fill pe-2 fs-6"></i>View Case</a></li>

                                    <li><a class="dropdown-item" onclick="ViewNotes(@obj.RequestId, @Model.StatusForName, 3)"><i class="fa-solid fa-file-invoice pe-2 fs-6"></i>View Notes</a></li>

                                    @if (@Model.StatusForName != 1)
                                    {
                                        <li><a class="dropdown-item" onclick="ViewDocuments(@obj.RequestId, @Model.StatusForName,3)"><i class="fa-solid fa-file-arrow-up pe-2 fs-6"></i>View Uploads</a></li>
                                    }

                                    @if (@Model.StatusForName == 2)
                                    {
                                        <li><a class="dropdown-item" onclick="SendAgreementModal(@obj.RequestId, @obj.RequestTypeId, @Model.StatusForName,3)"><i class="fa-solid fa-handshake pe-2 fs-6"></i>Send Agreement</a></li>
                                        <li><a class="dropdown-item" onclick="Transfer(@obj.RequestId)"><i class="fa-solid fa-file-code pe-2 fs-6"></i>Transfer</a></li>
                                    }

                                    @if (@Model.StatusForName == 4)
                                    {
                                        <li><a class="dropdown-item" onclick="SendOrder(@obj.RequestId, @Model.StatusForName,3)"><i class="fa-solid fa-cart-plus pe-2 fs-6"></i>Orders</a></li>
                                        <li>
                                            @if (obj.callType == 1 && obj.isFinalized == false)
                                            {
                                                <a class="dropdown-item" onclick="AdminEncounter(@obj.RequestId, @Model.StatusForName, 3)"><i class="fa-solid fa-file-waveform fs-6 pe-2"></i>Encounter</a>
                                            }
                                            else if (obj.isFinalized == false)
                                            {
                                                <a class="dropdown-item" onclick="EncounterModal(@obj.RequestId)"><i class="fa-solid fa-file-waveform fs-6 pe-2"></i>Encounter</a>
                                            }
                                        </li>
                                    }

                                    @if (@Model.StatusForName == 6)
                                    {
                                        <li><a class="dropdown-item" onclick="GetConcludeCare(@obj.RequestId)"><i class="fa-solid fa-hand-holding-heart pe-2 fs-6"></i>Conclude Care</a></li>
                                        <li>
                                            @if (obj.isFinalized == false)
                                            {
                                                <a class="dropdown-item" onclick="AdminEncounter(@obj.RequestId, @Model.StatusForName, 3)"><i class="fa-solid fa-file-waveform fs-6 pe-2"></i>Encounter</a>
                                            }
                                            else if (obj.isFinalized == true)
                                            {
                                                <a class="dropdown-item" onclick="DownloadEncounter(@obj.RequestId,3)"><i class="fa-solid fa-file-waveform fs-6 pe-2"></i>Encounter</a>
                                            }
                                        </li>
                                    }
                                </ul>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mx-2 border rounded shadow">
        <div class="accordion container-fluid d-block d-lg-none p-0" id="accordionPanelsStayOpenExample">
            <table class="providerTable w-100">
                <thead>
                    <tr>
                        <th class="d-none"></th>
                        <th class="d-none"></th>
                    </tr>
                </thead>

                @{
                    var counter = 1;
                }
                <tbody>
                    @foreach (var obj in Model.RequestListAdminDash)
                    {
                        <tr class="d-flex flex-column">
                            <td>
                                <h2 class="accordion-header" id="flush-heading@(counter)"></h2>
                                <div class="accordion-button collapsed d-flex flex-column" data-bs-toggle="collapse"
                                     data-bs-target="#flush-collapse@(counter)" aria-expanded="true"
                                     aria-controls="flush-collapse@(counter)">

                                    <div class="w-100 d-flex justify-content-between m-1">
                                        <div class="">
                                            <b>@obj.Name</b>
                                        </div>
                                        <div class="d-flex">
                                            <small>@GetRequestBy(obj.RequestTypeId) <i class="bi bi-circle-fill @GetTableColorClass(obj.RequestTypeId)-icon"></i></small>
                                        </div>
                                    </div>
                                    <div class="w-100 d-flex justify-content-between m-1 align-items-center">
                                        <div class="text-wrap col-6">
                                            @obj.Address
                                        </div>
                                        <div class="col-6 d-flex justify-content-end">
                                            <a class="btn rounded-pill btn-outline-info" type="button" href="https://www.google.com/maps/search/?api=1&query={Uri.EscapeDataString(@obj.Address).ToString()}" ;" target="_blank" style="height: 10%">
                                                <small class="">
                                                    <i class="fa-solid fa-earth-americas"></i>
                                                    <span class="">Map Location</span>
                                                </small>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <hr class="m-0 p-0 text-muted" />
                            </td>

                            <td>
                                <div id="flush-collapse@(counter)" class="accordion-collapse collapse"
                                     aria-labelledby="flush-heading@(counter)" data-bs-parent="#accordionFlushExample@(counter)">

                                    <div class="d-flex justify-content-end" style="margin-top: -20px;">
                                        <button class="btn rounded-pill border-primary text-primary z-3 mx-3" style="background-color:rgba(255, 255, 255, 0.719);" type="button" onclick="ViewCaseRecords(@Model.StatusForName, @obj.RequestId, 3)">
                                            <i class="bi bi-journal-bookmark-fill  pe-2 fs-6"></i>View Case
                                        </button>
                                    </div>

                                    <div class="accordion-body main-flex">

                                        <div class="inner-flex">
                                            <span class="accordion-heading-inner">
                                                <i class="bi bi-calendar-date text-info fs-5 me-2"></i>
                                                <b>Date of Birth:</b>
                                                <span class="accordion-value-inner">
                                                    @obj.DateOfBirth
                                                </span>
                                            </span>
                                        </div>

                                        <div class="inner-flex">
                                            <i class="bi bi-envelope text-info fs-5 me-2"></i>
                                            <span class="accordion-heading-inner">
                                                <b>Email:</b>
                                                <span class="accordion-value-inner">
                                                    @obj.Email
                                                </span>
                                            </span>
                                        </div>

                                        <div class="inner-flex">
                                            <i class="bi bi-telephone text-info fs-5 me-2"></i>
                                            <span class="accordion-heading-inner">
                                                <b>Patient:</b>
                                                <span class="accordion-value-inner">
                                                    @obj.Phone
                                                </span>
                                            </span>
                                        </div>

                                        <div class="row gap-3 mt-4 d-flex flex-wrap justify-content-around">
                                            @if (@Model.StatusForName == 1)
                                            {
                                                <button class="col-11 col-sm-5 btn rounded-pill btn-info" type="button" onclick="AcceptCaseModal(@obj.RequestId)">
                                                    <i class="fa-solid fa-clipboard-check pe-2 fs-6"></i>Accept
                                                </button>
                                            }
                                            <a href="mailto:@obj.Email" class="text-center">
                                                <button class="col-11 col-sm-5 btn rounded-pill btn-success">
                                                    <i class="fa-solid fa-envelope-open-text pe-2 fs-6"></i>Email
                                                </button>
                                            </a>
                                            <button class="col-11 col-sm-5 btn rounded-pill btn-success" type="button" onclick="ViewNotes(@obj.RequestId, @Model.StatusForName, 3)">
                                                <i class="fa-solid fa-file-invoice pe-2 fs-6"></i>View Notes
                                            </button>

                                            @if (@Model.StatusForName != 1)
                                            {
                                                <button class="col-11 col-sm-5 btn rounded-pill btn-success" type="button" onclick="ViewDocuments(@obj.RequestId, @Model.StatusForName,3)">
                                                    <i class="fa-solid fa-file-arrow-up pe-2 fs-6"></i>View Uploads
                                                </button>
                                            }

                                            @if (@Model.StatusForName == 2)
                                            {
                                                <button class="col-11 col-sm-5 btn rounded-pill btn-info" type="button" onclick="Transfer(@obj.RequestId)">
                                                    <i class="fa-solid fa-file-code pe-2 fs-6"></i>Transfer
                                                </button>
                                                <button class="col-11 col-sm-5 p-2 btn rounded-pill btn-warning" type="button" onclick="SendAgreementModal(@obj.RequestId, @obj.RequestTypeId, @Model.StatusForName,3)">
                                                    <i class="fa-solid fa-handshake pe-2 fs-6"></i>Send Agreement
                                                </button>
                                            }

                                            @if (@Model.StatusForName == 4)
                                            {
                                                <button class="col-11 col-sm-5 btn rounded-pill btn-warning" type="button" onclick="SendOrder(@obj.RequestId, @Model.StatusForName,3)">
                                                    <i class="fa-solid fa-cart-plus pe-2 fs-6"></i>Orders
                                                </button>
                                                @if (obj.callType == 1)
                                                {
                                                    <button class="col-11 col-sm-5 btn rounded-pill btn-info" type="button" onclick="HouseCall(@obj.RequestId)">
                                                        <i class="fa-solid fa-laptop-medical pe-2 fs-6"></i>House Call
                                                    </button>
                                                }
                                                @if (obj.callType == 1 && obj.isFinalized == false)
                                                {
                                                    <button class="col-11 col-sm-5 btn rounded-pill btn-success" type="button" onclick="AdminEncounter(@obj.RequestId, @Model.StatusForName, 3)">
                                                        <i class="fa-solid fa-file-waveform fs-6 pe-2"></i>Encounter
                                                    </button>
                                                }
                                                else if (obj.isFinalized == false)
                                                {
                                                    <button class="col-11 col-sm-5 btn rounded-pill btn-success" type="button" onclick="EncounterModal(@obj.RequestId)">
                                                        <i class="fa-solid fa-file-waveform fs-6 pe-2"></i>Encounter
                                                    </button>
                                                }
                                            }

                                            @if (@Model.StatusForName == 6)
                                            {
                                                <button class="col-11 col-sm-5 btn rounded-pill btn-warning" type="button" onclick="GetConcludeCare(@obj.RequestId)">
                                                    <i class="fa-solid fa-hand-holding-heart pe-2 fs-6"></i>Conclude Care
                                                </button>
                                                @if (obj.isFinalized == false)
                                                {
                                                    <button class="col-11 col-sm-5 btn rounded-pill btn-success" type="button" onclick="AdminEncounter(@obj.RequestId, @Model.StatusForName, 3)">
                                                        <i class="fa-solid fa-file-waveform fs-6 pe-2"></i>Encounter
                                                    </button>
                                                }
                                                else if (obj.isFinalized == true)
                                                {
                                                    <button class="col-11 col-sm-5 btn rounded-pill btn-success" type="button" onclick="DownloadEncounter(@obj.RequestId,3)">
                                                        <i class="fa-solid fa-file-waveform fs-6 pe-2"></i>Encounter
                                                    </button>
                                                }
                                            }
                                            <div class="d-flex justify-content-between">
                                                <span class="fw-bold ms-2">Chat with : </span>
                                                @if (obj.UserId != null)
                                                {
                                                    <button class="btn btn-outline-primary shadow-none d-flex fw-semibold align-items-center gap-2 w-auto" onclick="CreateConnection(@obj.RequestId,`@obj.PatientAspId`)" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
                                                        <i class="fa-solid fa-user fs-6"></i>
                                                        <span> Patient</span>
                                                    </button>
                                                }
                                                <button class="btn btn-outline-primary shadow-none d-flex fw-semibold align-items-center gap-2 w-auto" onclick="CreateConnection(@obj.RequestId,`@obj.AdminAspId`)" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
                                                    <i class="fa-solid fa-user-doctor fs-6"></i>
                                                    <span>Admin</span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </div>

}
else
{
    <div class="d-flex justify-content-center align-items-center fw-bold mt-5">
        <span class="d-md-block d-none fw-bold fs-2">No records has been added yet.</span>
        <span class="d-md-none d-block fw-semibold fs-4">No records has been added yet.</span>
    </div>
    <br />
    <div class="d-flex align-items-center justify-content-center">
        <div class="d-md-block d-none"><img src="~/images/no_records_found.png" /></div>
        <div class="d-md-none d-block"><img src="~/images/no_records_found.png" height="60px" /></div>
    </div>
}

<partial name="Chat/_Chat_OffCanvas" />

<script>
    $(document).ready(function () {
        $('.providerTable').DataTable().destroy();
        var dataTable = $('.providerTable').DataTable({
            //"lengthMenu": [[5, 10, -1], [5, 10, "All"]],
            "pageLength": 5,
            language: {
                oPaginate: {
                    sNext: '<i class="bi bi-caret-right-fill text-info"></i>',
                    sPrevious: '<i class="bi bi-caret-left-fill text-info"></i>'
                }
            }
        });

        $('#provider-search-input').on('keyup', function () {
            var searchValue = $(this).val().toLowerCase();
            dataTable.columns(0).search(searchValue, true, false).draw();
            //dataTable.search(searchValue, true, false).draw();
        });

        $('.dataTables_length').hide();
        $('.dataTables_filter').hide();
    });
</script>